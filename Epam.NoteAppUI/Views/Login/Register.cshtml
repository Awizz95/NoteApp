@{
    Layout = "_Layout";
}

<h1 class="text-sm-center">Please, register!</h1>

<form action="/Login/Register" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Логин:</label>
        <input class="form-control" type="text" name="login" autofocus />
        <label class="form-label">Пароль:</label>
        <input class="form-control" type="text" name="password" />
    </div>
    <div class="form-group mb-3">
        <label for="image">Profile photo (optional):</label>
        <input type="file" class="form-control" id="image" name="ProfilePhoto" accept="image/*" />
    </div>
    <input class="btn btn-primary" type="submit" value="Отправить" />
</form>

